%table{:cellpadding => "0", :cellspacing => "0", :width => "600"}
  %tr
    %td{:style => "border:1px solid #000;padding:15px;"}
      %table{:cellpadding => "0", :cellspacing => "0"}
        %tr{:valign => "top"}
          %td{:style => "vertical-align:top!important;", :width => "100%"}
            %span{:style => "margin:0 0 0 0;font-size:12px;color: #666;"}
              Ссылка добавлена #{item[:created_at].strftime("%d.%m.%Y")}
              %br/
            %h1{:style => "margin:15px 0 5px 0;font:18px Georgia, serif;"}
              %a{:href => item[:source], :style => "color:#003366;"}
                = item[:title]
            %span{:style => "font-size:12px;"}
              = item[:description]
              %br/
          %td{:style => "vertical-align:top!important;", :width => "200"}
            %a{:href => item[:source]}
              %img{:alt => item[:title], :src => item[:screenshot], :style => "border:none;margin:4px 0 0 10px;"}/

